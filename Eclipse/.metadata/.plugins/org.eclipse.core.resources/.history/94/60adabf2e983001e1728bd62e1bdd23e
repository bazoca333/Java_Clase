import java.util.Scanner;

public class Tres_en_Java {
public static void main(String[] args) {
	
	//Defino los jugadores
	String p1 = "[x]";
	String p2 = "[o]";
	
	int fila =  0;
	int columna = 0;
		
	int turno = 1;
	int ganador = 0;
		
	//Creo la matriz		
	String matriz[][] = {{"[ ]", "[ ]", "[ ]"},{"[ ]", "[ ]", "[ ]"},{"[ ]", "[ ]", "[ ]"}};
			
	//Hacer bucle
	boolean fin = false;
	while (fin == false) {		
		//Pido al usuario los datos
		Scanner scan = new Scanner(System.in);
		System.out.println("Jugador " + turno + " elija en qué fila y casilla quiere poner su ficha");
		System.out.println("Número de columna:");
		fila = scan.nextInt();
		System.out.println("Número en la fila:");
		columna = scan.nextInt();
		
		//Hago que se rellene la matriz
		String simbolo = "";
		if (turno == 1) {
			simbolo = p1;
		}else {
			simbolo = p2;
		}
		
		for (int i = 0; i < matriz.length; i++) {
			for (int j = 0; j < matriz[i].length; j++) {
				matriz[columna][fila] = simbolo;
			}
		}
		
		
		//Checkear algoritmo ganador
			int check = 0;
			//Horizontal
			for (int i = 0; i < matriz.length; i++) {
				for (int j = 0; j < matriz[i].length; j++) {
					
					if (matriz[i][j].equals(simbolo)) {
						check++;
					}
				}
				if (check == 3) {
					fin = true;
					if (matriz[i][0].equals(p1)) {
						ganador = 1;
					}else {
						ganador = 2;
					}
				}
				check = 0;
			}
			
			//Vertical
			for (int i = 0; i < matriz.length; i++) {
				for (int j = 0; j < matriz.length; j++) {
					
					if (matriz[j][i].equals(simbolo)) {
						check++;
					}
				}
				if (check == 3) {
					fin = true;
					if (matriz[0][i].equals(p1)) {
						ganador = 1;
					}else {
						ganador = 2;
					}
				}
				check = 0;
			}
			//Diagonal 1
			for (int i = 0; i < matriz.length; i++) {
				if (matriz[i][i].equals(simbolo)) {
					check++;
				}
			}
			if (check == 3) {
				fin = true;
				if (simbolo.equals(p1)) {
					ganador = 1;
				}else {
					ganador = 2;
				}
			}
			
			check = 0;
			
			//Diagonal 2
			for (int i = 0; i < matriz.length; i++) {
                if (matriz[i][matriz.length - 1 - i].equals(simbolo)) {
                    check++;
                }
            }
            if (check == matriz.length) {
                fin = true;
                if (simbolo.equals(p1)) {
					ganador = 1;
				}else {
					ganador = 2;
				}
            }
			check = 0;
			
		//Ver si el tablero está lleno
		int fichastablero = 0;	
		for (int i = 0; i < matriz.length; i++) {
			for (int j = 0; j < matriz[i].length; j++) {
				if (matriz[i][j].equals("[ ]")) {
					i=2;
					j=2;
				}else {
					fichastablero++;
					if (fichastablero >= 9) {
						fin = true;
					}
				}
				
			}
		}
		
		//Imprimir
		
		for (int i = 0; i < matriz.length; i++) {
			for (int j = 0; j < matriz[i].length; j++) {
				System.out.print(matriz[i][j]);
				System.out.print(" ");
			}
			System.out.println();
		}
		
		//Resetear valores
		if (turno == 1) {
			turno = 2;
		}else {
			turno = 1;
		}
		
		fila = 0;
		columna = 0;

		
	}
	
	System.out.println("El ganador es: Jugador " + ganador);
	
}
}
